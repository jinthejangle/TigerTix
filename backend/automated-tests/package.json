{
  "name": "tigertix-backend-tests",
  "version": "1.0.0",
  "description": "Automated tests for TigerTix backend",
  "main": "index.js",
  "scripts": {
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch",
    "test:ci": "jest --testTimeout=10000 --coverage"
  },
  "keywords": ["testing", "backend", "microservices"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^29.7.0",
    "sqlite3": "^5.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/*.test.js"],
    "collectCoverage": false,
    "testTimeout": 10000,
    "verbose": true
  }
}